<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bar.css">
    <link rel="stylesheet" href="/css/collection.css">
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <title>Document</title>

</head>

<body>

    <%- include ("partials/navbar.partials.ejs") %>
        <%- include ("partials/slider.patials.ejs") %>

            <!-- search bar 2-->

            <div class="modal_wraper">
                <div class="modal_container">
                    <!-- button 1 -->
                    <button class="close">&times;</button>
                    <input type="text" id="sear" value="" class="sear1" placeholder="Search for Dishes">
                </div>
            </div>

            <!-- search bar and radio button-->
            <div id="main-container" class="container">
                <div id="mainContentHeading">
                    <h1 class="heading">
                        Order Food Online in <span id="headingLocation">Fort
                        </span>
                    </h1>
                    <div class="filterbutton">
                        <button id="triger">
                            <img src="../images/searchIcon.svg" alt="" />
                            <span style="background-color: white;">Search for wraps</span>
                        </button>
                        <button>
                            
                            
                           <input type="radio" name="veg_nonVeg" value="nonVeg" id="nonVeg"/>
                            <a href ='/collections/nonveg'>
                           <label for="nonVeg" style="background-color: white;">Non-Veg Only</label>
                            </a>
                        </button>
                        <button>

                            <input type="radio" name="veg_nonVeg" value="veg" id="veg" />
                            <label for="veg" style="background-color: white;">Veg Only</label>
                        </button>
                    </div>
                </div>
                <hr />
                <!-- Product fielter area-->
                <div id="mainProducts">
                    <div id="productCategory">
                        <ul id="Combo-category">
                            <%category.forEach(function(p){%>

                                <li><a href="/collections/<%=p.id%>" id="Combo-categorys">
                                        <%=p.category_name%>
                                    </a></li>
                                <%});%>
                        </ul>
                    </div>
                    <!-- middle products list-->

                    <div id="productArea">
                        <%foods.forEach(function(p){ %>

                            <div id="prod">
                                <img src="<%=p.img_src%>" id="prodImage">
                                <p id="prodname">
                                    <%=p.food_name%>
                                </p>
                                <p id="pveg_nonVeg">
                                    <%=p.veg_NonVeg%>
                                </p>
                                <p id="prodPrice">â‚¹ <%=p.price%>
                                </p>
                                <div id="clear"></div>
                                <p id="proddescription"><%=p.description%>
                                </p>
                                <div id="clear"></div>
                                <p id="readMore">Read More</p>
                                <img src="../images/star.png" id="star" />
                               <a href="/<%=p.id%>"> <button id="button" data-food="<%= JSON.stringify(p) %>" >Add</button></a>
                                <div id="clear"></div>
                                <p id="boughtTimes"><%=p.boughtTime%> bought this</p>
                                <p id="Customisable">Customisable</p>
                            </div>
                            <%});%>
                    </div>
                    <!--check out page area-->
                </div>
                </div>   

            <%- include ("partials/footer.partials.ejs") %>
</body>

</html>
<script src="/scripts/slider.js"></script>
<script src="/scripts/search.js"></script>
<script  src="/scripts/collection.js"></script>
